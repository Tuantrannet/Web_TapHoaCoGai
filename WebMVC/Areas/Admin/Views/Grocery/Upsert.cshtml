@model Grocery

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}


<h2> @(Model.Id != 0? "Chỉnh sửa" : "Tạo") sản phẩm</h2>

<form asp-action="Upsert" method="post" enctype="multipart/form-data">
    <input asp-for="Id" Hidden />
    <input asp-for="ImageUrl" Hidden/>
    <div class="row">
        <div class="col-10">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Loại</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LowPrice" class="control-label">Giá thấp</label>
                <input asp-for="LowPrice" class="form-control" />
                <span asp-validation-for="LowPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HighPrice" class="control-label">Giá cao</label>
                <input asp-for="HighPrice" class="form-control" />
                <span asp-validation-for="HighPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label">Tình trạng</label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label">Ngày sản xuất(tháng/ngày/năm)</label>
                <input asp-for="ProductionDate" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <label asp-for="ExpiryDate" class="control-label">Hạn sử dụng(tháng/ngày/năm)</label>
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input type="file" name="file" class="form-control border-0 shadow" />
                <label asp-for="ImageUrl" class="ms-2"></label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            @if (Model.Id == 0)
            {
                <div class="form-group">
                    <input type="submit" value="Tạo" class="btn btn-primary" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Sửa" class="btn btn-primary" />
                </div>
            }

        </div>
        <div class="col-2">
            <img src="@Model.ImageUrl" width="100%"  
                style="border-radius:5px; border:1px solid #bbb9b9"/>
        </div>
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <a asp-controller="Grocery" asp-action="Index" class="btn btn-outline-primary border form-control">
                Quay lại danh sách
            </a>
        </div>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}